@using EntityLayer.Concreate
@model List<Blog>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Blog List</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Blog Name</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Writer</th>
                                    <th scope="col">View</th>

                                </tr>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td class="avatar">
                                            <div class="round-img">
                                                <a><img class="rounded-circle" src="/BlogPictures/@x.BlogResim" width="50" height="50" alt=""></a>
                                            </div>
                                        </td>
                                        <td>@x.BlogBaslik</td>
                                        <td>@(((DateTime)x.OlusturmaTarihi).ToString("dd-MMM-yyyy"))</td>
                                        <td>@x.Category.KategoriAdi</td>
                                        <td>@x.AppUser.NameSurname</td>
                                        <td>
                                            <a href="/Blog/BlogDetail/@x.BlogId" class="btn btn-primary"><i class="fa fa-eye"></i> View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->

<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
</script>
