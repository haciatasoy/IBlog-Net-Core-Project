@model AboutViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>About</h1>
<br />
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">About Table </strong>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Mail</th>
                        <th scope="col">Address</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Edit</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.About)
                    {
                        <tr>
                            <th scope="row">@x.AboutId</th>
                            <td>@x.Mail</td>
                            <td>@x.Adres</td>
                            <td>@x.Telefon</td>
                            <td>
                                <a class="btn btn-warning" data-toggle="modal" data-target="@("#EditModal-" + x.AboutId)" data-url="@Url.Action($"/Admin/About/Update/{x.AboutId}")" style="color:white;"><i class="fa fa-pencil" style="color:white"></i> Edit</a>
                                <div class="modal fade" id="EditModal-@x.AboutId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                <h4 class="modal-title"><strong>Update About </strong></h4>
                                            </div>
                                            <div class="modal-body">
                                                <form asp-action="Update" method="post">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <input type="hidden" value="@x.AboutId" asp-for="AboutId" />
                                                            <label class="control-label">Mail</label>
                                                            <input type="text" value="@x.Mail" asp-for="Mail" class="form-control" />

                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="control-label">Address</label>
                                                            <input type="text" value="@x.Adres" asp-for="Adres" class="form-control" />

                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="control-label">Telefon</label>
                                                            <input type="text" value="@x.Telefon" asp-for="Telefon" class="form-control" />

                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="control-label">Map Location</label>
                                                            <input type="text" value="@x.MapLocation" asp-for="MapLocation" class="form-control" />

                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-success waves-effect waves-light save-category">Save</button>
                                                    </div>
                                                </form>

                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<div> <h3 class="text-center">There are @Model.About.Count record</h3></div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>

<!-- jQuery Modal -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>

