@using EntityLayer.Concreate
@model List<Blog>
@{
    ViewData["Title"] = "getBlogsByCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Bloglar</h1><br />
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Blog List</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Role Name</th>
                        <th scope="col">Yazar</th>
                        <th scope="col">Kategori</th>

                    </tr>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td class="avatar">
                                <div class="round-img">
                                    <a><img class="rounded-circle" src="/BlogPictures/@x.BlogResim" width="80" height="75" alt=""></a>
                                </div>
                            </td>
                            <td>@x.BlogBaslik</td>
                            <td>@x.AppUser.NameSurname</td>
                            <td>@x.Category.KategoriAdi</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->



<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
</script>