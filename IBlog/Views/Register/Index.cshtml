@model RegisterCreateDto
@{
	Layout = null;
}


<!DOCTYPE html>
<html>

<!-- Head -->
<head>

	<title>IBLOG Register</title>
	<style>
		.alert {
			padding: 20px;
			background-color: red;
			color: white;
			opacity: 1;
			transition: opacity 0.6s;
			margin-bottom: 15px;
		}

		.dangertext {
			background-color: red;
			color: white;
		}

		.field-icon {
			float: left;
			margin-left: -25px;
			margin-top: -25px;
			position: relative;
			z-index: 2;
		}
	</style>
	<!-- Meta-Tags -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="keywords" content="Existing Login Form Widget Responsive, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design">
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!-- //Meta-Tags -->

	<link href="~/register/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />

	<link rel="stylesheet" href="~/register/css/style.css" type="text/css" media="all">

	<link rel="shortcut icon" href="~/favicon.png" />

	<!-- Fonts -->
	<link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
	<link rel="stylesheet" href="~/writer/assets/vendors/mdi/css/materialdesignicons.min.css">
	<!-- //Fonts -->

</head>
<!-- //Head -->
<!-- Body -->
<body>

	<h1>Register Form</h1>

	<div class="w3layoutscontaineragileits">
		<h2>Login here</h2>
		@if (ViewData["ErrorMessage"] != null)
		{
			<div class="alert" id="alert">
				<strong><i class="mdi mdi-alert"></i> OOOPSSS!</strong> @ViewData["ErrorMessage"]
			</div>
		}
		<form method="post">
			<input type="text" asp-for="UserName" placeholder="Username" required="">
			<input type="text" asp-for="NameSurname" placeholder="Full Name" required="">
			<input type="email" asp-for="Email" placeholder="Email" required="">
			<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span> <input type="password" id="password-field" name="password" asp-for="Password" placeholder="Password" required="">
			<input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<span asp-validation-for="ConfirmPassword" class="dangertext"></span>
			<br />
			<div class="dangertext" asp-validation-summary="ModelOnly"></div>
			<br />
			<ul class="agileinfotickwthree">
				<li>
					<input type="checkbox" id="brand1" asp-for="AcceptTerms">
					<label for="brand1"><span></span><a class="w3_play_icon1" data-toggle="modal" id="#exampleModalLong">I Accept Terms</a></label>
					<a href="/Login/Index/">Already you have an account?</a>
				</li>
			</ul>
			<div class="aitssendbuttonw3ls">
				<input type="submit" value="Sign Up">
				<div class="clear"></div>
			</div>

		</form>
	</div>

	


	


	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>

	<!-- jQuery Modal -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>


	<script type="text/javascript" src="~/register/js/jquery-2.1.4.min.js"></script>

	<!-- pop-up-box-js-file -->
	<script src="~/register/js/jquery.magnific-popup.js" type="text/javascript"></script>
	<!--//pop-up-box-js-file -->
	
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js">
	</script>
	<script>
		setTimeout(function () {


			$('#alert').alert('close');
		}, 3000);
	</script>
	<script>
		$(".toggle-password").click(function () {

			$(this).toggleClass("fa-eye fa-eye-slash");
			var input = $($(this).attr("toggle"));
			if (input.attr("type") == "password") {
				input.attr("type", "text");
			} else {
				input.attr("type", "password");
			}
		});
	</script>
	
</body>
<!-- //Body -->

</html>

