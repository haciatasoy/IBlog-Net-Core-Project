@model ResetPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html :class="{ 'theme-dark': dark }" x-data="data()" lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="~/writer/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/mailconfirm/public/assets/css/tailwind.output.css" />
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
            defer></script>
    <script src="~/mailconfirm/public/assets/js/init-alpine.js"></script>
    
    <link rel="shortcut icon" href="~/favicon.png" />
    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
            opacity: 1;
            transition: opacity 0.6s;
            margin-bottom: 15px;
        }

       

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

            .closebtn:hover {
                color: black;
            }

        .text-danger {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="flex items-center min-h-screen p-6 bg-gray-50 dark:bg-gray-900">
        <div class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800">
            <div class="flex flex-col overflow-y-auto md:flex-row">
                <div class="h-32 md:h-auto md:w-1/2">
                    <img aria-hidden="true"
                         class="object-cover w-full h-full dark:hidden"
                         src="~/mailconfirm/public/assets/img/forgot-password-office.jpeg"
                         alt="Office" />
                    <img aria-hidden="true"
                         class="hidden object-cover w-full h-full dark:block"
                         src="~/mailconfirm/public/assets/img/forgot-password-office-dark.jpeg"
                         alt="Office" />
                </div>
                <div class="flex items-center justify-center p-6 sm:p-12 md:w-1/2">
                    <div class="w-full">
                        <h1 class="mb-4 text-xl font-semibold text-gray-700 dark:text-gray-200">
                            Reset password
                        </h1>
                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="alert" id="alert">
                                <strong><i class="mdi mdi-alert"></i> OOOPSSS!</strong> @ViewData["ErrorMessage"]
                            </div>
                        }
                        <form method="post" action="/Login/ResetPassword/">
                            <label class="block text-sm">
                                <span class="text-gray-700 dark:text-gray-400">Code</span>
                                <input type="text" asp-for="@Model.code" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                                       placeholder="Code" required="" />
                            </label>
                            <label class="block text-sm">
                                <span class="text-gray-700 dark:text-gray-400">Password</span>
                                <span asp-validation-for="@Model.password" class="text-danger"></span>
                                <input  type="password" asp-for="@Model.password" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                                       placeholder="Password" required="" />
                            </label>
                            <label class="block text-sm">
                                <span class="text-gray-700 dark:text-gray-400">Confirm Password</span>
                                <span asp-validation-for="@Model.confirmpassword" class="text-danger"></span>
                                    <input  type="password" asp-for="@Model.confirmpassword" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                                           placeholder="Confirm Password" required="" /></label>

                            <button type="submit" class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">Reset Password</button>


                        </form>
                        <div class="alert" asp-validation-summary="ModelOnly">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js">
</script>
<script>
    setTimeout(function () {


        $('#alert').alert('close');
    }, 3000);
</script>

<script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/writer/assets/js/off-canvas.js"></script>
<script src="~/writer/assets/js/hoverable-collapse.js"></script>
<script src="~/writer/assets/js/misc.js"></script>
