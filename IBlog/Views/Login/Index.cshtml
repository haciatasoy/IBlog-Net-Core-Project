@model LoginViewDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/BlogLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Sign In Now</h3>
		<div class="row inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@if (ViewData["ErrorMessage"] != null)
				{
					<div class="alert" id="alert">
						<strong><i class="mdi mdi-alert"></i> OOOPSSS!</strong> @ViewData["ErrorMessage"]
					</div>
				}
				<form method="post">
					<div class="form-group">
						<label for="exampleInputEmail1 mb-2">Username</label>
						<input type="text" asp-for="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required="">
						
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1 mb-2">Password</label>
						<input type="password" id="password-field" name="password" asp-for="Password" class="form-control" id="exampleInputPassword1" required=""><span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
					</div>
					<div class="form-check mb-2">
						<input type="checkbox" class="form-check-input" id="exampleCheck1">
						<label class="form-check-label" asp-for="RememberMe" for="exampleCheck1">Remember Me </label>
						
					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Sign In</button>
					<p><a href="~/Register/Index/"> Don't have an account?</a></p>
					<br />
					<p><a href="~/Login/ForgotPassword/"> Forgot Password</a></p>
				</form>
			</div>
		</div>
	</div>
</section>

