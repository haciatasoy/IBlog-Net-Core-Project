@model WriterUpdateDto
@{
    ViewData["Title"] = "WriterUpdate";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<head>
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
            opacity: 1;
            transition: opacity 0.6s;
            margin-bottom: 15px;
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

            .closebtn:hover {
                color: black;
            }
    </style>
</head>
<h1>Profil Bilgilerim</h1>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert" id="alert">
                    <strong><i class="mdi mdi-alert"></i> OOOPSSS!</strong> @ViewData["ErrorMessage"]
                </div>
            }
            <form class="forms-sample" method="post" action="WriterUpdate" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="form-control-label" for="Image">Profil Fotoğrafı</label>
                    <div class="custom-file">
                        <input asp-for="Image" type="file" class="custom-file-input" lang="tr">
                        <label class="custom-file-label" for="ImageFile">Resim Seç</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Username</label>
                    <input type="text" asp-for="UserName" class="form-control" id="exampleInputName1" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail2">Name Surname</label>
                    <input type="text" asp-for="NameSurname" class="form-control" id="exampleInputEmail2" placeholder="Name Surname" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword3">Email</label>
                    <input type="email" asp-for="Email" class="form-control" id="exampleInputPassword3" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword4" placeholder="Password" required><span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                   
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword5">Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword5" placeholder="Confirm Password" required><span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                   
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>       
            </form>
            <br />
            <div class="text-danger" asp-validation-summary="ModelOnly">
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js">
</script>
<script>
    setTimeout(function () {
        $('#alert').alert('close');
    }, 3500);
</script>
<script>

    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
<script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/writer/assets/js/off-canvas.js"></script>
<script src="~/writer/assets/js/hoverable-collapse.js"></script>
<script src="~/writer/assets/js/misc.js"></script>
