@using EntityLayer.Concreate
@model IEnumerable<Message>
<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email-outline"></i>
        <span class="count-symbol bg-warning"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Messages</h6>
        @if(Model.Count() == 0)
        {
            <div class="dropdown-divider"></div>
            <h5>There is no Message</h5>
        }
        else
        {
             @foreach(var x in Model)
        {
            
        
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                    @if (x.FromUser?.Image == "https://i.hizliresim.com/645lujq.jpg")
                    {
                            <img src="@x.FromUser.Image" alt="image" class="profile-pic">
                    }
                    else
                    {
                        <img src="/UserPictures/@x.FromUser?.Image" alt="image" class="profile-pic">
                    }

            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@x.FromUser.NameSurname send you a message</h6>
                    <p class="text-gray mb-0"> @(((DateTime)x.MesajTarih).ToString("dd-MMM-yyyy HH:mm")) </p>
            </div>
        </a>
       
       }
        <div class="dropdown-divider"></div>
        <a href="/Message/Index"><i class="mdi mdi-message"></i> @ViewBag.MessageCount total messages</a>
 
        }
    </div>
</li>  