                    else if (x.YorumPuan == 2)
                    {
                        <div id="full-stars-example-two">
                            <div class="stars" style="--s:40px">
                                <input type="radio" value="@oneStar" checked disabled />
                                <input type="radio" value="@twoStar" checked disabled />
