                    }
                    else if (x.YorumPuan == 1)
                    {
                        <div id="full-stars-example-two">
                            <div class="stars" style="--s:40px">
                                <input type="radio" value="@oneStar" checked disabled />
                                <input type="radio" value="@twoStar" disabled />
                                <input type="radio" value="@threeStar" disabled />
                                <input type="radio" value="@fourStar" disabled />
                                <input type="radio" value="@fiveStar" disabled />
                                <i></i>
