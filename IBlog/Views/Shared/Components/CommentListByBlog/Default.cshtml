                            </div>
                        </div>
                    }
                    else if (x.YorumPuan == 4)
                    {
                        <div id="full-stars-example-two">
                            <div class="stars" style="--s:40px">
                                <input type="radio" value="@oneStar" checked disabled />
                                <input type="radio" value="@twoStar" checked disabled />
                                <input type="radio" value="@threeStar" checked disabled />
                                <input type="radio" value="@fourStar" checked disabled />
                                <input type="radio" value="@fiveStar" disabled />
